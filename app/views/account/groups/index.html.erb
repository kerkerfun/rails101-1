<div class="col-md-12">

  <h2 class="text-center"> 我加入的討論版 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> Tiltle </th>
        <th> description </th>
        <th> Post Count </th>
        <th> Last Update </th>
      </tr>
    </thead>

   <tbody>
     <% @group.each do |group| %>
       <tr>
         <td> # </td>
         <td> <%= link_to(group.title, group_path(group)) %> </td>
         <td> <%= group.description %> </td>
         <td> <%= group.post.count %> </td>
         <td> <%= group.update_at %> </td>
       </tr>
     <% end %>
   </thead>
 </table>
</div>
